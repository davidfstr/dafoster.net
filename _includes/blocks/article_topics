<div class="block">
  <h3>Topics</h3>
  
  <ul class="tag_box">
    {% assign tag_info_list = site.tags %}
    {% for tag_info in tag_info_list %}
      {% assign tag = tag_info[0] %}
      
      {% assign page_has_tag = false %}
      {% for page_tag in page.tags %}
        {% if page_tag == tag %}
          {% assign page_has_tag = true %}
        {% endif %}
      {% endfor %}
      
      <li id="{{ tag }}-topic"{% if page_has_tag %} class="active"{% endif %}><a href="{{ BASE_PATH }}{{ site.JB.tags_path }}#{{ tag }}">{{ tag }} <sup>{{ site.tags[tag].size }}</sup></a></li>
    {% endfor %}
  </ul>
  <hr style="margin: .5em 0;"/>
  <a class="subscribe" href="{{ site.production_url | replace: 'http://', 'feed://'}}/rss.xml">
    <img src="/assets/feed-icon-14x14.png" alt="">Subscribe
  </a>
</div>
